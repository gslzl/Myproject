<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginStart="10dp"
                android:id="@+id/Phone"
                android:layout_width="117dp"
                android:layout_height="163dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/phone" />

            <ImageView
                android:id="@+id/Live"
                android:layout_width="120dp"
                android:layout_height="76dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/Phone"
                android:src="@drawable/live" />

            <ImageView
                android:id="@+id/Pc"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_below="@+id/Live"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/Phone"
                android:src="@drawable/pc" />

            <ImageView
                android:id="@+id/Bag"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/Live"
                android:src="@drawable/bag" />

            <ImageView
                android:id="@+id/Toys"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_below="@+id/Live"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/Pc"
                android:src="@drawable/toys" />

            <ImageView
                android:id="@+id/Cosmetics"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/Bag"
                android:src="@drawable/cosmetics" />

            <ImageView
                android:id="@+id/Luxury"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_below="@+id/Cosmetics"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/Toys"
                android:src="@drawable/luxury" />

            <ImageView
                android:id="@+id/Gold"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/Cosmetics"
                android:src="@drawable/gold" />

            <ImageView
                android:id="@+id/Vt"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_below="@+id/Gold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/Luxury"
                android:src="@drawable/vi" />

        </RelativeLayout>

    </HorizontalScrollView>



</LinearLayout>