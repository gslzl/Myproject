<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_auction">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/civ_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@mipmap/default_avatar" />


    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/civ_avatar"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="昵称"
        android:fontFamily="@font/textsize"
        android:textColor="@color/colorMineMenu"
        android:textSize="20dp" />


    <LinearLayout
        android:id="@+id/layout_order_manage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nickname"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:gravity="center_vertical"
            android:id="@+id/imv_order_manage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/icon_order_manage" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:text="订单管理"
            android:fontFamily="@font/textsize"

            android:textColor="@color/colorMineMenu"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_order_manage"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_collection"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/icon_collection" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:text="我的收藏"
            android:fontFamily="@font/textsize"

            android:textColor="@color/colorMineMenu"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_customer_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_collection"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_customer_service"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/icon_customer_service" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:text="联系客服"
            android:fontFamily="@font/textsize"

            android:textColor="@color/colorMineMenu"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_customer_service"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/icon_setting" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/textsize"

            android:text="设置      "
            android:textColor="@color/colorMineMenu"
            android:textSize="20dp" />
    </LinearLayout>



</RelativeLayout>
